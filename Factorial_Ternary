// Java program to find factorial 
// of given number 
  
// Driver Class 
class Factorial { 
    // function to find factorial 
    int factorial(int n) 
    { 
  
        // single line to find factorial 
        return (n == 1 || n == 0) ? 1
                                  : n * factorial(n - 1); 
    } 
  
    // main function 
    public static void main(String args[]) 
    { 
        Factorial obj = new Factorial(); 
        int num = 5; 
        System.out.println("Factorial of " + num + " is "
                           + obj.factorial(num)); 
    } 
}
